        fbq('track', 'ViewContent', {
            content_type: 'product',
            content_ids: ['<?php echo $product->getId(); ?>'],
            value: <?php echo $price; ?>,
            currency: '<?php echo $block->getCurrency(); ?>',
            product_catalog_id: '<?php echo $catalogId; ?>'
        });
    </script>
<?php endif; ?>
